{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "esnext",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "types/*": ["src/types/*"],
      "core/*": ["src/core/*"],
      "reactivity/*": ["src/reactivity/*"],
      "renderer/*": ["src/renderer/*"],
      "compiler/*": ["src/compiler/*"]
    },
    "lib": [
      "dom",
      "esnext",
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*"
  ],
}